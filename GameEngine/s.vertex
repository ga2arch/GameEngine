#version 330

in vec3 position;
in vec3 normal;
in vec2 uv;

uniform mat4 proj;
uniform mat4 view;
uniform mat4 model;

out vec3 norm;
out vec3 pos;
out vec2 coord;

void main() {
    norm = normal;//(transpose(inverse(view*model)) * vec4(normal, 1.0)).xyz;
    pos = position;
    coord = uv;

    gl_Position = proj * view * model * vec4(position, 1.0);
}